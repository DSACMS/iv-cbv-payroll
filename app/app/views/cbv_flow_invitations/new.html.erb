<h1><%= t(".header") %></h1>
<p><%= t(".description") %></p>

<%= form_with(model: @cbv_flow_invitation, url: invitations_path, builder: UswdsFormBuilder) do |f| %>
  <%= hidden_field_tag :secret, params[:secret] %>
  <%= render partial: "#{@site_id}", locals: { f: f } %>
  <%= f.submit t(".form.submit") %>
<% end %>