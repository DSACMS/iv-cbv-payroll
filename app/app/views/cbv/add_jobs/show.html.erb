<% site_config = Rails.application.config.sites[@cbv_flow.site_id] %>
<h1><%= t(".header", day_count: "90") %></h1>
<p><%= t(".subheader") %></p>

<div data-controller="cbv-add-job">
  <%= raw t(".criteria_disclaimer", text: site_config.learn_more_link_text, url: site_config.learn_more_link_url) %>

  <h2><%= t(".answer_yes_header") %></h2>
  <ul>
    <li><%= t(".answer_yes_bullet_1") %></li>
    <li><%= t(".answer_yes_bullet_2") %></li>
    <li><%= t(".answer_yes_bullet_3") %></li>
  </ul>

  <h2><%= t(".answer_no_header") %></h2>
  <ul>
    <li><%= t(".answer_no_bullet_1") %></li>
    <li><%= t(".answer_no_bullet_2") %></li>
    <li><%= t(".answer_no_bullet_3") %></li>
    <li><%= t(".answer_no_bullet_4") %></li>
    <li><%= t(".answer_no_bullet_5") %></li>
  </ul>

  <%= form_with(url: cbv_flow_add_job_path, builder: UswdsFormBuilder, data: {
    "cbv-add-job-target": "form",
  }, id: "form") do |f| %>

    <%= f.radio_button(:additional_jobs, true, { label: t(".yes_radio") }) %>
    <%= f.radio_button(:additional_jobs, false, { label: t(".no_radio") }) %>

    <div id="additional-job-details" data-cbv-add-job-target="additionalJobDetails" style="display: none;">
      <%= render partial: "additional_job_details", locals: { f: f } %>
    </div>

    <%= f.submit "Continue" %>
  <% end %>
</div>