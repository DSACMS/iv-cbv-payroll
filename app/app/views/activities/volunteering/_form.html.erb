<p class="usa-hint">
  <%= t("activities.hub.reporting_window", range: @flow.reporting_window_display) %>
</p>
<%= uswds_form_with(model: volunteering_activity, url: volunteering_activity.persisted? ? activities_flow_volunteering_path(id: volunteering_activity.id) : activities_flow_volunteering_index_path) do |f| %>
  <%= f.text_field :organization_name, label: t("activities.community_service.organization_name") %>
  <%= f.text_field :hours, type: :number, label: t("activities.community_service.hours") %>
  <%= f.date_picker :date, label: t("activities.community_service.date") %>
  <%= f.submit volunteering_activity.persisted? ? t("activities.hub.save") : t("activities.community_service.add") %>
<% end %>
