<%= uswds_form_with(model: job_training_activity, url: job_training_activity.persisted? ? activities_flow_job_training_path(id: job_training_activity.id) : activities_flow_job_training_index_path) do |f| %>
  <%= f.text_field :program_name, label: t("activities.job_training.program_name") %>
  <%= f.text_field :organization_address, label: t("activities.job_training.organization_address") %>
  <%= f.text_field :hours, type: :number, label: t("activities.job_training.hours") %>
  <%= f.submit job_training_activity.persisted? ? t("activities.hub.save") : t("activities.job_training.add") %>
<% end %>
