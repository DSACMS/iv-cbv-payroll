<div class="usa-accordion usa-accordion--bordered usa-accordion--multiselectable margin-top-2" id="<%= @base_id %>" data-allow-multiple>
  <% button_id = "#{@base_id}-button" %>
  <% content_id = "#{@base_id}-content" %>

  <%= content_tag("h#{@heading_level}", class: "usa-accordion__heading usa-prose") do %>
    <button type="button" class="usa-accordion__button"
            id="<%= button_id %>"
            aria-expanded="<%= @expanded ? "true" : "false" %>"
            aria-controls="<%= content_id %>"
            data-action="<%= @data_action %>"
            data-section-identifier="<%= @data_section_identifier %>">
      <%= title %>
    </button>
  <% end %>
  <div id="<%= content_id %>" class="usa-accordion__content usa-prose">
    <% accordion_items.each do |item| %>
      <p>
        <%= item %>
      </p>
    <% end %>
  </div>
</div>
